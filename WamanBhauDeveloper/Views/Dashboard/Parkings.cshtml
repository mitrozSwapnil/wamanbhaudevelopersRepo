<!-- Modal -->
<div class="modal fade" id="parkingFormModal" tabindex="-1" aria-labelledby="parkingFormModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="parkingFormModalLabel">Add Parking</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="row">
                        <div class="col-md-4">
                            <label class="form-label">Site Name</label>
                            <input type="text" class="form-control" placeholder="Enter name">
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Type</label>
                            <select class="form-select">
                                <option>Select Type</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Parking No</label>
                            <select class="form-select">
                                <option>Select Number</option>
                            </select>
                        </div>
                    </div>

                    <div class="row mt-3">

                        <div class="col-md-4">
                            <label class="form-label">Availability</label>
                            <select class="form-select">
                                <option>Select Availability</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Assign to (Flat No.)</label>
                            <input type="text" class="form-control" placeholder="Enter number">
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Assign to (Client Name)</label>
                            <select class="form-select">
                                <option>Assign to Client</option>
                            </select>
                        </div>
                    </div>

                    <div class="modal-footer mt-4">
                        <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>



