<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Mazer Admin Dashboard</title>

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/assets/css/bootstrap.css">

    <link rel="stylesheet" href="~/assets/vendors/iconly/bold.css">

    <link rel="stylesheet" href="~/assets/vendors/perfect-scrollbar/perfect-scrollbar.css">
    <link rel="stylesheet" href="~/assets/vendors/bootstrap-icons/bootstrap-icons.css">
    <link rel="stylesheet" href="~/assets/css/app.css">
    <link rel="shortcut icon" href="~/assets/images/favicon.svg" type="image/x-icon">

    <!-- For Filters Buttons -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest"></script>


    <!-- For Model Popup -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>


    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"></script>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

    <!-- Code for Side bar Blue Card -->
    <style>
        /* body {
                    background-color: white;
                }
                .sidebar-wrapper {
                    background-color: white;
                    padding: 20px;
                } */
        .sidebar-item {
            background-color: #007bff;
            /* padding: 10px; */
            margin: 12px 6px;
            border-radius: 16px;
            /* text-align: center; */
        }

            .sidebar-item a {
                color: white;
                text-decoration: none;
                /* font-weight: bold; */
            }
    </style>

    <style>
        body {
            background-color: #f5f7fb;
        }

        .card {
            background: white;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>

<body>
    <div id="app">
        <div id="sidebar" class="active">
            <div class="sidebar-wrapper active sidebar-item">
                <div class="sidebar-header">
                    <div class="d-flex justify-content-between">
                        <!-- <div class="logo">
                            <a href="index.html"><img src="~/assets/images/logo/logo.png" alt="Logo" srcset=""></a>
                        </div> -->
                        <div class="toggler">
                            <a href="#" class="sidebar-hide d-xl-none d-block"><i class="bi bi-x bi-middle"></i></a>
                        </div>
                    </div>
                </div>


                <div class="sidebar-menu">
                    <ul class="menu">
                        <!-- <li class="sidebar-title">Menu</li> -->

                        <li class="sidebar-item @(ViewData["ActiveMenu"] == "Dashboard" ? "active" : "")">
                            <a class='sidebar-link' asp-controller="Dashboard" asp-action="Index">
                                <i class="bi bi-grid-fill"></i>
                                <span>Dashboard</span>
                            </a>
                        </li>

                        <li class="sidebar-item @(ViewData["ActiveMenu"] == "Leads" ? "active" : "")">
                            <a class='sidebar-link' asp-controller="LeadMaster" asp-action="Leads">
                                <i class="bi bi-person-lines-fill"></i>
                                <span>Leads</span>
                            </a>
                        </li>

                        <li class="sidebar-item @(ViewData["ActiveMenu"] == "ChannelPartners" ? "active" : "")">
                            <a class='sidebar-link' asp-controller="Dashboard" asp-action="ChannelPartners">
                                <i class="bi bi-people"></i>
                                <span>Channel Partners</span>
                            </a>
                        </li>

                        <li class="sidebar-item @(ViewData["ActiveMenu"] == "UserManagement" ? "active" : "")">
                            <a class='sidebar-link' asp-controller="Dashboard" asp-action="UserManagement">
                                <i class="bi bi-person-check"></i>
                                <span>User Management</span>
                            </a>
                        </li>

                        @* <li class="sidebar-item">
                            <a class='sidebar-link'>
                                <i class="bi bi-clipboard"></i>
                                <span>Inventory</span>
                            </a>
                        </li> *@

                        <li class="sidebar-item @(ViewData["ActiveMenu"] == "Flats" ? "active" : "")">
                            <a class='sidebar-link' asp-controller="Dashboard" asp-action="Flats">
                                <i class="bi bi-house-door"></i>
                                <span>Flats</span>
                            </a>
                        </li>

                        <li class="sidebar-item @(ViewData["ActiveMenu"] == "Parkings" ? "active" : "")">
                            <a class='sidebar-link' asp-controller="Dashboard" asp-action="Parkings">
                                <i class="bi bi-signpost-2"></i>
                                <span>Parkings</span>
                            </a>
                        </li>

                        @* <li class="sidebar-item">
                            <a class='sidebar-link'>
                                <i class="bi bi-gear"></i>
                                <span>Settings</span>
                            </a>
                        </li> *@

                        <li class="sidebar-item">
                            <a class='sidebar-link'>
                                <i class="bi bi-box-arrow-left"></i>
                                <span>Logout</span>
                            </a>
                        </li>



                    </ul>
                </div>
                <button class="sidebar-toggler btn x"><i data-feather="x"></i></button>
            </div>
        </div>
        <div id="main">


            <header class="mb-3">
                <a href="#" class="burger-btn d-block d-xl-none">
                    <i class="bi bi-justify fs-3"></i>
                </a>
                <div class="flex items-center justify-between space-x-3">
                    <h1 class="text-xl font-bold">Wel-come</h1>
                    <!-- <button class="flex items-center bg-gray-600 text-white px-3 py-2 rounded-lg shadow">
                        <i data-lucide="arrow-left" class="w-5 h-5 mr-2"></i>
                    </button> -->
                    <div class="flex items-center space-x-2">
                        <!-- Logout Button -->
                        <button class="flex items-center bg-blue-600 text-white px-3 py-2 rounded-lg shadow">
                            <i data-lucide="log-out" class="w-5 h-5 mr-2"></i>
                            Log out
                        </button>
                    </div>
                </div>
            </header>

            @RenderBody()


        </div>
    </div>
    <script src="~/assets/vendors/perfect-scrollbar/perfect-scrollbar.min.js"></script>
    <script src="~/assets/js/bootstrap.bundle.min.js"></script>

    <script src="~/assets/vendors/apexcharts/apexcharts.js"></script>
    <script src="~/assets/js/pages/dashboard.js"></script>

    <script src="~/assets/js/main.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script>
        lucide.createIcons();
    </script>





</body>

</html>